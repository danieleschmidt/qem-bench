# QEM-Bench Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# JAX Configuration
# =============================================================================

# JAX backend selection ("cpu", "gpu", "tpu", "auto")
JAX_PLATFORM_NAME=cpu

# Enable 64-bit precision (set to "True" for higher precision)
JAX_ENABLE_X64=False

# Memory preallocation (set to "False" to disable GPU memory preallocation)
XLA_PYTHON_CLIENT_PREALLOCATE=True

# =============================================================================
# Quantum Hardware Backends
# =============================================================================

# IBM Quantum Configuration
IBMQ_TOKEN=your_ibm_quantum_token_here
IBMQ_HUB=ibm-q
IBMQ_GROUP=open
IBMQ_PROJECT=main

# AWS Braket Configuration  
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
BRAKET_S3_BUCKET=your-braket-results-bucket

# Google Quantum AI Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Rigetti Configuration
RIGETTI_API_KEY=your_rigetti_api_key_here
QCS_SETTINGS_FILE_PATH=/path/to/qcs_settings.toml

# =============================================================================
# Development Configuration  
# =============================================================================

# Debug mode (set to "True" for development)
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable performance profiling
ENABLE_PROFILING=False

# Number of parallel workers for batch jobs
NUM_WORKERS=4

# =============================================================================
# Database Configuration
# =============================================================================

# Results database URL (SQLite by default)
DATABASE_URL=sqlite:///qem_bench_results.db

# Redis cache URL (optional, for distributed caching)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Benchmarking Configuration
# =============================================================================

# Default number of shots for quantum circuits
DEFAULT_SHOTS=1024

# Maximum circuit depth for benchmarks
MAX_CIRCUIT_DEPTH=100

# Timeout for quantum job execution (seconds)
QUANTUM_JOB_TIMEOUT=3600

# Default noise factors for ZNE
ZNE_NOISE_FACTORS=1.0,1.5,2.0,2.5,3.0

# =============================================================================
# Monitoring & Analytics
# =============================================================================

# Enable metrics collection
ENABLE_METRICS=True

# Prometheus metrics port
METRICS_PORT=9090

# OpenTelemetry configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# Security Configuration
# =============================================================================

# API rate limiting (requests per minute)
RATE_LIMIT=60

# Enable authentication for remote access
ENABLE_AUTH=False

# JWT secret key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here

# =============================================================================
# Storage Configuration
# =============================================================================

# Data directory for storing results
DATA_DIR=./data

# Temporary directory for intermediate files
TEMP_DIR=/tmp/qem_bench

# Maximum file size for uploads (MB)
MAX_FILE_SIZE=100

# =============================================================================
# Notebook Configuration
# =============================================================================

# Jupyter server configuration
JUPYTER_PORT=8888
JUPYTER_TOKEN=your_jupyter_token_here

# Enable Jupyter Lab extensions
ENABLE_JUPYTER_EXTENSIONS=True

# =============================================================================
# Testing Configuration
# =============================================================================

# Test database URL (separate from production)
TEST_DATABASE_URL=sqlite:///test_qem_bench.db

# Enable slow tests (hardware integration tests)
ENABLE_SLOW_TESTS=False

# Mock quantum hardware for testing
MOCK_QUANTUM_HARDWARE=True

# =============================================================================
# Documentation Configuration
# =============================================================================

# Sphinx documentation configuration
DOCS_BUILD_DIR=docs/_build
DOCS_SOURCE_DIR=docs

# Enable API documentation auto-generation
AUTO_GENERATE_API_DOCS=True