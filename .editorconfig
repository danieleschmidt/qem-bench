# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Jupyter notebooks
[*.ipynb]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# reStructuredText files
[*.rst]
indent_size = 3

# LaTeX files
[*.{tex,bib}]
indent_size = 2

# Web files
[*.{html,css,js,ts}]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# GitHub Actions
[.github/workflows/*.yml]
indent_size = 2